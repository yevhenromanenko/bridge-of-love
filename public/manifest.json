{
  "name": "BridgeOfLove",
  "version": "1.2",
  "manifest_version": 2,
  "author": "Yevhen",
  "icons": {
    "16": "./favicon16.png",
    "48": "./favicon48.png",
    "128": "./favicon128.png"
  },
  "browser_action": {},
  "background": {"persistent": false,
    "scripts": ["./background.js"]},
  "content_scripts": [
    {
      "matches": ["https://www.bridge-of-love.com/*", "http://*.bridge-of-love.com/*"],
      "js": ["./static/js/main.js"],
      "css": ["./static/css/main.css"]
    }
  ]

}
